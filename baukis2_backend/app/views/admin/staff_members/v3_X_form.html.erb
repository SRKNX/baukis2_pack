<!-- FormPresenterというプレゼンターを作り、読み込んだ。 -->
<!-- ここで生まれた「full_name_block」メソッドでフォーム内
「名前」の項目が簡略化。 -->

<%=
   markup do |m|
     p = StaffMemberFormPresenter.new(f, self)
     m << p.notes
     m << p.text_field_block(:email,"メールアドレス", size: 32, required: true)
     m << p.password_field_block(:password,"パスワード", size: 32, required: true)
     m << p.full_name_block(:family_name, :given_name, "氏名", required: true)
     m << p.full_name_block(:family_name_kana, :given_name_kana,
       "フリガナ", required: true)
     m << p.date_field_block(:start_date, "入社日", required: true)
     m << p.date_field_block(:start_date, "入社日", required: true)
     m << p.date_field_block(:end_date, "退社日")
     m << p.suspended_check_box

   end


 %>
<!-- ApplicationHelperに 「include HtmlBuilder」を記入したことで
　ヘルパーメソッドとなり、erbファイルでも利用が可能に。
 書き方がガラリと変化した。 -->
